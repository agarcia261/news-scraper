{{#if data}}
    {{#each data}}
        <div class="col s12 m12">
            <div class="card blue-grey darken-1 hoverable">
                <div class="card-content white-text">
                    <span class="card-title">{{title}}</span>
                    <p>{{summary}}</p>
                </div>
                <div class="card-action">
                    <a target="_blank" href="{{link}}">Link</a>
                    {{#if saved}}
                        <button class="btn waves-effect waves-light delete-article right red hoverable margin-left-5" del-id="{{_id}}" type="submit" name="action">Delete
                            <i class="material-icons right">send</i>
                        </button> 
                        <button data-target="{{id}}" class="btn waves-effect waves-light article-notes right hoverable margin-left-5 modal-trigger" article-id="{{_id}}" type="submit" name="action">Article Notes
                            <i class="material-icons right">send</i>
                        </button> 
                    {{else}}
                        <button class="btn waves-effect waves-light save-news red hoverable" id="{{_id}}" type="submit" name="action">Save
                            <i class="material-icons right">send</i>
                        </button> 
                    {{/if}}    
                </div>
            </div>
        </div>
        {{#if saved}}
            {{> modalnotes}}
            <script>
                $(document).ready(function(){
                    $('.modal').modal();
                });
            </script>
        {{/if}}
    {{/each}}
    {{#if index}}
        {{> modalindex}}
          <script>
                $(document).ready(function(){
                    $('.modal').modal();
                    $('#modalIndex').modal('open')
                });
            </script>
    {{/if}}
{{else}}
    <div id="articles"></div>
{{/if}}




