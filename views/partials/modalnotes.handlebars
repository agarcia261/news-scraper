    <!-- Modal Structure -->
<div id="{{id}}" class="modal bottom-sheet ">
    <div class="modal-content">
        <h4>{{title}}</h4>
        <ul class="collection">
            {{#each note}}
                <li class="collection-item"><div>{{body}}<a href="#" id={{_id}} class="secondary-content delete-comment {{id}}"><i class="material-icons">delete</i></a></div></li>
            {{/each}}
        </ul>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea comment-id="{{id}}" class="comment-textarea materialize-textarea"></textarea>
                        <label for="textarea2">Add Comment</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn waves-effect waves-light modal-close hoverable red" type="submit" name="action">Cancel
        </button> 
        <button class="btn waves-effect waves-light article-notes right hoverable add-comment" article-id="{{_id}}" type="submit" name="action">Save
            <i class="material-icons right">send</i>
        </button> 
    </div>
</div>
